<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_shell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shell" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_inspect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inspect" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_internal_dex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start internal Samsung DEX screen" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_switch_process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch process" />

        <TextView
            android:id="@+id/app_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            tools:text="Hello World!" />

    </LinearLayout>

</ScrollView>

